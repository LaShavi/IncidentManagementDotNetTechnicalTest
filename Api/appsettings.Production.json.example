{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/prod-log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },

  "CorsPolicies": [
    {
      "Origin": "https://your-production-domain.com",
      "Methods": [ "GET", "POST" ],
      "Headers": [ "Content-Type", "Authorization" ]
    },
    {
      "Origin": "https://your-api-domain.com",
      "Methods": [ "GET" ],
      "Headers": [ "Content-Type" ]
    }
  ],

  "ConnectionStrings": {
    "dbContext": "Server=tcp:your-server.database.windows.net,1433;Initial Catalog=your-database-name;Persist Security Info=False;User ID=your-username;Password=YOUR_SECURE_PASSWORD;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
    "Provider": "SqlServer"
  },

  "Authentication": {
    "SecretKey": "YOUR_PRODUCTION_SECRET_KEY_MINIMUM_64_CHARACTERS_LONG_VERY_SECURE",
    "Issuer": "IncidentManagementDotNetTechnicalTest",
    "Audience": "IncidentManagementDotNetTechnicalTest-Users",
    "AccessTokenExpiration": "15",
    "RefreshTokenExpiration": "7",
    "AllowMultipleDevices": true,
    "MaxFailedAttempts": 5,
    "LockoutDurationMinutes": 15
  },

  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": "587",
    "SmtpUsername": "your-production-email@gmail.com",
    "SmtpPassword": "your-production-app-password",
    "FromEmail": "your-production-email@gmail.com",
    "FromName": "Incident Management DotNet Technical Test",
    "EnableSsl": "true",
    "CompanyName": "Incident Management DotNet Technical Test",
    "SupportEmail": "support@incidentmanagement.com",
    "TemplatesPath": "EmailTemplates"
  },

  "SwaggerDoc": {
    "Title": "Incident Management DotNet Technical Test API",
    "Version": "v1",
    "Description": "WEB Service - Incident Management Technical Test - Production Environment"
  },

  "GeneralConfigParams": {
    "Enable": "1",
    "RequestLimitPerSecond": "100"
  }
}