@model Infrastructure.Services.EmailTemplates.Models.PasswordResetEmailModel
@{
    Layout = "_Layout";
    ViewBag.Title = Model.ResetTitle;
}

<h2>@Model.ResetHeading</h2>

<p>@Model.GreetingText <strong>@Model.Username</strong>,</p>

<p>@Model.RequestReceivedMessage</p>

<div class="highlight">
    <p><strong>@Model.TokenTitle</strong></p>
    <div class="token">@Model.ResetToken</div>
</div>

<div class="warning">
    <p><strong>@Model.ImportantInfoTitle</strong></p>
    <ul>
        <li>@Model.ExpirationWarningText</li>
        <li>@Model.SingleUseOnlyText</li>
        <li>@Model.IgnoreIfNotRequestedText</li>
    </ul>
</div>

<p>@Model.HowToResetText</p>

<p>@Model.SecurityConcernText</p>