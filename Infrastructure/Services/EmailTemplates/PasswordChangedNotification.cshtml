@model Infrastructure.Services.EmailTemplates.Models.PasswordChangedNotificationModel
@{
    Layout = "_Layout";
    ViewBag.Title = Model.PasswordChangedTitle;
}

<h2>@Model.NotificationTitleText</h2>

<p>@Model.GreetingText <strong>@Model.Username</strong>,</p>

<p>@Model.ConfirmationMessageText</p>

<div class="highlight">
    <p><strong>@Model.ChangeConfirmedText</strong></p>
    <p>@Model.AccountProtectedText</p>
</div>

<div class="warning">
    <p><strong>@Model.NotYouText</strong></p>
    <p>@Model.UnauthorizedAccessText</p>
    <ul>
        <li>@Model.ContactSupportText</li>
        <li>@Model.ChangePasswordASAPText</li>
        <li>@Model.ReviewRecentActivityText</li>
    </ul>
</div>

<p><strong>@Model.AdditionalSecurityMeasuresText</strong></p>
<ul>
    <li>@Model.UseStrongPasswordsText</li>
    <li>@Model.Enable2FAText</li>
    <li>@Model.DontShareCredentialsText</li>
</ul>